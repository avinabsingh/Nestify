


<% layout("layouts/boilerplate") %>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-10 col-lg-8">
      <h2 class="mb-4 text-center">Edit Listing</h2>

      <form method="POST" action="/listings/<%= data1.id %>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">
        
        
        <div class="mb-3">
          <label for="title" class="form-label">Title:</label>
          <input name="title" value="<%= data1.title %>" type="text" class="form-control" id="title" required>
          <div class="valid-feedback">Title looks good!</div>
          <div class="invalid-feedback">Title can't be blank</div>
        </div>

        
        <div class="mb-3">
          <label for="description" class="form-label">Description:</label>
          <textarea name="description" class="form-control" id="description" rows="3" required><%= data1.description %></textarea>
          <div class="valid-feedback">Description looks good!</div>
          <div class="invalid-feedback">Description can't be blank</div>
        </div>

        
        <div class="row">
          <div class="col-12 col-md-4 mb-3">
            <label for="price" class="form-label">Price:</label>
            <input name="price" value="<%= data1.price %>" type="number" class="form-control" id="price" required>
            <div class="valid-feedback">Price looks good</div>
            <div class="invalid-feedback">Enter a valid price</div>
          </div>

          <div class="col-12 col-md-4 mb-3">
            <label for="country" class="form-label">Country:</label>
            <input name="country" value="<%= data1.country %>" type="text" class="form-control" id="country" required>
            <div class="valid-feedback">Country looks good</div>
            <div class="invalid-feedback">Country can't be blank</div>
          </div>

          <div class="col-12 col-md-4 mb-3">
            <label for="category" class="form-label">Category:</label>
            <input name="category" value="<%= data1.category %>" type="text" class="form-control" id="category" required>
            <div class="valid-feedback">Category looks good</div>
            <div class="invalid-feedback">Category can't be blank</div>
          </div>
        </div>

        
        <div class="mb-3">
          <label for="image" class="form-label">Image:</label>
          <input name="image" type="file" class="form-control" id="image">
          
        </div>

        
        <div class="mb-3">
          <label for="location" class="form-label">Location:</label>
          <input name="location" value="<%= data1.location %>" type="text" class="form-control" id="location" required>
          <div class="valid-feedback">Location looks good!</div>
          <div class="invalid-feedback">Location can't be blank</div>
        </div>

        
        <div class="d-grid">
          <button class="btn btn-dark mb-3 my-btn">ADD</button>
        </div>
      </form>
    </div>
  </div>
</div>
