<style>
  .nav-search {
    background-color: #fe424d;
    color: #fff;
    padding: 0 2rem;
    border-radius: 1rem;
  }

  .nav-search:hover {
    background-color: #fe424d;
    color: #fff;
  }

  .search-opt {
    padding: 0.5rem 3rem;
    border-radius: 2rem;
  }

  .container-fluid {
    letter-spacing: 1.2px;
  }

  @media (max-width: 768px) {
    .navbar form {
      width: 100%;
      margin-bottom: 1rem;
    }
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top" id="navbar">
  <div class="container-fluid" id="container">
    
    <a class="navbar-brand" href="#"><i class="fa-solid fa-hotel fa-otter"></i></a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" onclick="adjustNavbarMargin()" >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <div class="navbar-nav ms-auto">
        <form class="d-flex" role="search" action="/litings/destinations" method="GET">
          <input class="form-control me-2 search-opt" type="search" placeholder="Destinations" aria-label="Search" name="destination" id="destination">
          <button class="btn nav-search" type="submit">Search</button>
        </form>
      </div>

      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">Nestify</a>
        
        <% if (!curUser) { %>
          <a class="nav-link" href="/signup"><b>Sign up</b></a>
          <a class="nav-link" href="/login"><b>Login</b></a>
        <% } %>
        <% if (curUser) { %>
          <a class="nav-link" href="/logout">Logout</a>
        <% } %>
      </div>

    </div>
  </div>
</nav>

<script>
  function adjustNavbarMargin() {
    const nav = document.getElementById("navbar");
    const container = document.getElementById("container");
    if (nav.style.marginBottom === "10rem") {
      nav.style.marginBottom = "1rem";
    } else {
      nav.style.marginBottom = "1rem";
      container.style.backgroundColor = "white";
    }
  }
</script>
